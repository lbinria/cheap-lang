clear;

sub my_clear {
    clear;
}

sub reset_xy {
    x : V0 = 0;
    y : V1 = 0;
    call my_clear;
}

// Draw heart
x : V0 = 24; y : V1 = 8;
draw(x, y, top_left);

x : V0 = 32;
draw(x, y, top_right);

x : V0 = 24; y : V1 = 16;
draw(x, y, bot_left);

x : V0 = 32;
draw(x, y, bot_right);

if (x == 32) {
    if (y == 17) {
        call reset_xy;
    }
}